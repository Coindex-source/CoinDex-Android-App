<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BackupWordsActivity">

    <ImageView
        android:id="@+id/iv_backup_words_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_left_black"
        android:padding="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_backup_words_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="备份助记词"
        android:textColor="@color/text_title"
        android:textSize="28sp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_backup_words_back"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/tv_backup_words_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="请按顺序抄写助记词，确保备份正确，切勿向任何人透露 你的助记词，否则你可能会失去全部资产"
        android:textColor="@color/text_subtitle"
        android:textSize="14sp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="@id/tv_backup_words_1"
        app:layout_constraintRight_toRightOf="@id/tv_backup_words_1"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_words_1"
        android:layout_marginTop="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_backup_words"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_backup_words_1"
        app:layout_constraintRight_toRightOf="@id/tv_backup_words_1"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_words_2"
        app:layout_constraintBottom_toTopOf="@id/tv_backup_words_submit"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/tv_backup_words_submit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_blue_btn_corners_50"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>