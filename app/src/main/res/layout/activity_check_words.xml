<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CheckWordsActivity">

    <ImageView
        android:id="@+id/iv_check_words_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_left_black"
        android:padding="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_check_words_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="确认助记词"
        android:textColor="@color/text_title"
        android:textSize="28sp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_check_words_back"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/tv_check_words_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="请按顺序点击助记词，以确保正确备份。"
        android:textColor="@color/text_subtitle"
        android:textSize="14sp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="@id/tv_check_words_1"
        app:layout_constraintRight_toRightOf="@id/tv_check_words_1"
        app:layout_constraintTop_toBottomOf="@id/tv_check_words_1"
        android:layout_marginTop="5dp"
        />

    <View
        android:id="@+id/v_check_words_bg"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/shape_white_corners_10_stroke_1"
        app:layout_constraintLeft_toLeftOf="@id/tv_check_words_1"
        app:layout_constraintRight_toRightOf="@id/tv_check_words_1"
        app:layout_constraintTop_toBottomOf="@id/tv_check_words_2"
        android:layout_marginTop="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_check_words_1"
        android:layout_width="0dp"
        android:layout_height="210dp"
        app:layout_constraintLeft_toLeftOf="@id/v_check_words_bg"
        app:layout_constraintRight_toRightOf="@id/v_check_words_bg"
        app:layout_constraintTop_toTopOf="@id/v_check_words_bg"
        app:layout_constraintBottom_toBottomOf="@id/v_check_words_bg"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        tools:listitem="@layout/item_check_words"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_check_words_2"
        android:layout_width="0dp"
        android:layout_height="210dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_check_words_1"
        app:layout_constraintRight_toRightOf="@id/tv_check_words_1"
        app:layout_constraintTop_toBottomOf="@id/v_check_words_bg"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_uncheck_words"
        />


    <TextView
        android:id="@+id/tv_check_words_submit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_blue_btn_corners_50"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>